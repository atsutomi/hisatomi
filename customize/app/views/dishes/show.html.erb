<div id="dish">
  <h1><%= @dish.name %></h1>

  <%= dish_image_tag @dish %>
  <div id="explanation">
    <p><%= @dish.name %></p>
    <p><%= @dish.yen %>円</p>
    <p><%= @dish.kcal %>Kcal</p>
    <p><%= @dish.genra %></p>
    <p><%= @dish.category %></p>
    <% @dish.foodstuffs.order("recipes.created_at").each do |foodstuff| %>
    <%= foodstuff.name %>
    <% end %>
  </div>
  <p>
    <%= link_to "一覧に戻る", :dishes %>

  </p>
  <% if session[:order].present? %>
  <p><%= link_to "選択", :action=>"order" %></p>
  <% end %>
</div>

